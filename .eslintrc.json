{
  "extends": "airbnb-base",
  "rules": {
    "func-names": [
      "error",
      "never"
    ],
    "no-param-reassign": "off",
    "prefer-arrow-callback": "off",
    "no-console": "off",
    "comma-dangle": "off",
    "prefer-destructuring": "off",
    "no-trailing-spaces": "off",
    "no-underscore-dangle": [
      "error",
      {
        "allow": [
          "_id"
        ],
        "allowAfterThis": true
      }
    ]
  },
  "env": {
    "mocha": true
  }
}