block variables

-
    var imageFolder = '/'+publicFolder+'/images',
        cssFolder = '/'+publicFolder+'/css',
        jsFolder = '/'+publicFolder+'/js',
        timeTag = Math.round(Date.now()/1800000);

doctype html

html
    head
        title= title
        meta(name="viewport" content="width=device-width, initial-scale=1")
        meta(content="IE=edge,chrome=1,chrome=1", "http-equiv"="X-UA-Compatible")
        meta(charset="utf-8")
        meta(content="yes", name="apple-mobile-web-app-capable")

        link(rel='stylesheet', href!= cssFolder + '/bootstrap.css')
        link(rel='stylesheet', href!= cssFolder + '/style.css?v=#{timeTag}')

    body
        
        block content

        script(src!= jsFolder + "/jquery.3.3.1.js")
        script(src!= jsFolder + "/bootstrap.min.js")
        script(src!= jsFolder + "/script.min.js?v=#{timeTag}")

        block postcontent

